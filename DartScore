</style></head><body><!-- SETUP SCREEN --><div class="screen active" id="setup">
  <div class="header"><strong>üéØ Darts Score Counter</strong></div>
  <div class="setup">
    <label>Game Mode</label>
    <select id="mode">
      <option value="501">501</option>
      <option value="301">301</option>
    </select><label>Legs to win a set</label>
<input id="legsToWin" type="number" value="3" min="1" />

<label>Sets to win the match</label>
<input id="setsToWin" type="number" value="2" min="1" />

<label>Players</label>
<select id="numPlayers" onchange="renderPlayerInputs()">
  <option value="2">2 Players</option>
  <option value="3">3 Players</option>
  <option value="4">4 Players</option>
</select>

<div id="playerInputs"></div>

<button class="submit" style="width:100%; margin-top:16px;" onclick="startGame()">Start Game</button>

  </div>
</div><!-- GAME SCREEN --><div class="screen" id="game">
  <div class="header">
    <button onclick="backToSetup()">‚Üê</button>
    <div class="match-info">
      <div>Leg <strong id="leg">1</strong></div>
      <div>Set <strong id="set">1</strong></div>
      <div>First to <strong id="legsTarget"></strong> legs</div>
      <div>First to <strong id="setsTarget"></strong> sets</div>
    </div>
  </div>  <div class="banner" id="banner"></div>  <div class="players" id="players"></div>  <div class="input" id="inputArea">
    <div class="display" id="display">0</div>
    <div class="pad">
      <button onclick="num(1)">1</button><button onclick="num(2)">2</button><button onclick="num(3)">3</button>
      <button onclick="num(4)">4</button><button onclick="num(5)">5</button><button onclick="num(6)">6</button>
      <button onclick="num(7)">7</button><button onclick="num(8)">8</button><button onclick="num(9)">9</button>
      <button class="zero" onclick="num(0)">0</button><button onclick="back()">‚å´</button>
    </div>
    <div class="actions">
      <button class="clear" onclick="clearInput()">Clear</button>
      <button class="submit" onclick="submit()">Submit</button>
    </div>
  </div>
</div><script>
let state;

function renderPlayerInputs() {
  const n = +numPlayers.value;
  playerInputs.innerHTML = '';
  for (let i = 1; i <= n; i++) {
    playerInputs.innerHTML += `<label>Player ${i}</label><input id="p${i}" value="Player ${i}">`;
  }
}

function startGame() {
  const start = +mode.value;
  const legsToWin = +legsToWinInput.value;
  const setsToWin = +setsToWinInput.value;

  state = {
    start,
    legsToWin,
    setsToWin,
    leg: 1,
    set: 1,
    current: 0,
    input: '',
    finished: false,
    players: Array.from({length:+numPlayers.value}, (_,i)=>({
      name: document.getElementById(`p${i+1}`).value,
      score: start,
      legs: 0,
      sets: 0,
      rounds: [],
      setRounds: []
    }))
  };

  setup.classList.remove('active');
  game.classList.add('active');

  legsTarget.textContent = legsToWin;
  setsTarget.textContent = setsToWin;

  render();
}

function backToSetup() { location.reload(); }

function avg(a){ return a.length ? Math.round(a.reduce((x,y)=>x+y,0)/a.length) : 0; }

function showBanner(text) {
  banner.textContent = text;
  banner.classList.add('active');
  setTimeout(()=>banner.classList.remove('active'), 1500);
}

function render() {
  leg.textContent = state.leg;
  set.textContent = state.set;

  players.innerHTML = '';
  state.players.forEach((p,i)=>{
    const d = document.createElement('div');
    d.className = `player ${i===state.current && !state.finished ? 'active':'inactive'}`;
    d.innerHTML = `
      <div class="player-header">
        <strong>${p.name}</strong>
        <div class="record">
          <div>Legs ${p.legs}/${state.legsToWin}</div>
          <div>Sets ${p.sets}/${state.setsToWin}</div>
        </div>
      </div>
      <div class="score">${p.score}</div>
      <div class="stats">
        <div>AVG <span>${avg(p.rounds)}</span></div>
        <div>SET AVG <span>${avg(p.setRounds)}</span></div>
      </div>
    `;
    players.appendChild(d);
  });
}

function num(n){ if(state.finished) return; state.input=(state.input+n).slice(0,3); display.textContent=state.input; }
function back(){ if(state.finished) return; state.input=state.input.slice(0,-1); display.textContent=state.input||'0'; }
function clearInput(){ state.input=''; display.textContent='0'; }

function submit(){
  if(state.finished) return;
  const v = +state.input;
  if(!v || v>180) return;

  const p = state.players[state.current];

  if(p.score - v < 0){
    clearInput();
    state.current = (state.current+1)%state.players.length;
    render();
    return;
  }

  p.score -= v;
  p.rounds.push(v);
  p.setRounds.push(v);

  if(p.score === 0){
    p.legs++;
    showBanner(`${p.name} wins the leg`);

    state.players.forEach(pl=>{ pl.score = state.start; /* keep setRounds across legs */ });
    state.leg++;

    if(p.legs >= state.legsToWin){
      p.sets++;
      showBanner(`${p.name} wins the set`);
      state.players.forEach(pl=>pl.legs=0);
      state.set++;

      if(p.sets >= state.setsToWin){
        showBanner(`${p.name} wins the match`);
        state.finished = true;
        inputArea.style.opacity = 0.4;
      }
    }
  }

  state.current = (state.current+1)%state.players.length;
  clearInput();
  render();
}

const legsToWinInput = document.getElementById('legsToWin');
const setsToWinInput = document.getElementById('setsToWin');
renderPlayerInputs();
</script></body>
</html>
